
     {
         "name": "Getting Started Example",
         "version": "1.0",
         "manifest_version": 2,
         "description": "Build an Extension!",
         "permissions":[
           "declarativeContent",
           "storage",
           "activeTab",
           "cookies",
           "tabs",
           "<all_urls>"
         ],
         "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["jquery.min.js","content.js"],
           "all_frames": true,
          "run_at": "document_end"
        }
      ],
         "background": {
           "scripts": ["jquery.min.js", "bootstrap.min.js", "background.js"],
           "persistent": false
         },
         "browser_action": {
           "default_icon": "icon.png",
           "default_popup": "popup.html"


       }
     }
